{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "declaration": true,
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "lib": [
      "es2015"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/*/src/**/*.ts"
  ],
  "exclude": [
    "packages/*/src/**/*.test.ts"
  ]
}