{
  "name": "x-ts-generator",
  "version": "0.0.0",
  "description": "A toolbox of typescript generators",
  "scripts": {
    "lint": "tslint --project tsconfig.json 'packages/*/src/**/*.ts'",
    "fix": "tslint --project tsconfig.json 'packages/*/src/**/*.ts' --fix",
    "test": "tsc --project tsconfig.test.json && nyc ava 'packages/*/src/**/*.test.js'",
    "test-watch": "ava --watch",
    "coverage": "npm run test && nyc report --reporter=html && open coverage/index.html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "build": "tsc",
    "prepare": "npm run build",
    "clean": "rm -rf dist; bash -c 'shopt -s globstar; rm packages/*/src/**/*.js packages/*/src/**/*.map packages/*/src/**/*.d.ts'"
  },
  "keywords": [],
  "author": "Gordon Burgett (gordon@gordonburgett.net)",
  "license": "MIT",
  "devDependencies": {
    "ava": "^1.2.0",
    "coveralls": "^3.0.2",
    "nyc": "^13.1.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-eslint-rules-recommended": "^1.2.0",
    "typescript": "^3.2.4"
  },
  "ava": {
    "files": [
      "packages/*/src/**/*.test.ts"
    ],
    "cache": true,
    "failFast": true,
    "verbose": true,
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
